@import url(http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz);

body { background-image: url('<%= image_path 'brushed.png' %>'); }

header h1 { font-family: 'Yanone Kaffeesatz', sans-serif; font-size: 36px; margin-top: 19px 0px 0px 0px; color: #428bca; }

aside { padding: 10px 5px 0px 0px !important; }
aside ul { padding: 0px; }
aside li { margin: 7.5px 0px; }
aside li { width: 100%; display: block; }
aside li a { width: 100%; display: block; padding-left: 10px; color: #1F1D6D; }
aside li a { font-size: 18px; text-transform: uppercase; border: 3px solid transparent; border-radius: 15px; }
aside li a:hover { text-decoration: none; background-color: #DEEAF6; border: 3px solid #A2C6EA; }
aside li.selected a { text-decoration: none; color: #000; }

#page h1, #page h2,#page h3 { color: #428bca; font-size: 22px; }
